<div class="row m--padding-20">
    <div class="col-md-12">
        {% if count > 0 %}
        <table class="table m-table m-table--head-separator-primary table-bordered">
            <tr>
                <th class="bg-light m--font-bold">N. Fatt.</th>
                <th class="bg-light m--font-bold">A</th>
                <th class="bg-light m--font-bold">Q</th>
                <th class="bg-light m--font-bold">P</th>
                <th class="bg-light m--font-bold">Totale</th>
                <th class="bg-light m--font-bold">Data Inserimento</th>
                <th class="bg-light m--font-bold">Firma</th>
            </tr>

            {% for r in ratings %}
                <tr>
                    <td>{{ r.invoice.invoiceNumber }}</td>
                    <td>{{ r.reliability }}</td>
                    <td>{{ r.quality }}</td>
                    <td>{{ r.price }}</td>
                    <td>{{ (r.price + r.quality + r.reliability) / 3 }}</td>
                    <td>{{ r.insertionDate|date('d-M-Y') }}</td>
                    <td>{{ r.author.employee.name }} {{ r.author.employee.surname }}</td>
                </tr>
            {% endfor %}

            <tr class="bg-aliceblue">
                <td class="m--font-bold">TOTALE</td>
                <td class="m--font-bold">{{ totReliability }}</td>
                <td class="m--font-bold">{{ totQuality }}</td>
                <td class="m--font-bold">{{ totPrice }}</td>
                <td class="m--font-bold">{{ (totReliability + totQuality + totPrice) / count }}</td>
                <td></td>
                <td></td>
            </tr>
        </table>
        {% else %}
            Nessuna valutazione per questo fornitore
        {% endif %}
    </div>
</div>
