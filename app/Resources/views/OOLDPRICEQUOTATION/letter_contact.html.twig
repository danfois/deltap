<div class="row">
    <div class="col-xl-10 offset-xl-1">
        <div class="m-form__section m-form__section--first">
            <div class="m-form__heading">
                <h3 class="m-form__heading-title">
                    3. Contatti e Lettera
                </h3>
            </div>
            <div class="form-group m-form__group row">

                <div class="col-lg-6 m-form__group-sub">
                    <label class="form-control-label">
                        * Email Mittente:
                    </label>
                    <div class="m-input-icon m-input-icon--right">
                        {{ form_widget(form.sender_mail) }}
                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                        class="la la-envelope"></i></span></span>
                    </div>
                    <span class="m-form__help">
                        Indirizzo mail del mittente del preventivo
                    </span>
                </div>

                <div class="col-lg-6 m-form__group-sub">
                    <label class="form-control-label">
                        * Email Destinatario:
                    </label>
                    <div class="m-input-icon m-input-icon--right">
                        {{ form_widget(form.receiver_mail) }}
                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                        class="la la-envelope"></i></span></span>
                    </div>
                    <span class="m-form__help">
                        Indirizzo mail del destinatario
                    </span>
                </div>

            </div>


            <div class="form-group m-form__group row">
                <div class="col-lg-12 m-form__group-sub">
                    <label class="form-control-label">Lettera</label>
                    {{ form_widget(form.letter.letter_body) }}
                </div>
            </div>

            <div class="form-group m-form__group row text-right">
                <div class="col-lg-12 m-form__group-sub">
                    <label>&nbsp;</label><br>
                    <div id="generate_letter" class="btn-md btn btn-success m-btn m-btn--icon m-btn--gradient-to-metal">
                        <span>
                            <i class="la la-plus"></i>
                            <span>Genera Lettera</span>
                        </span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>