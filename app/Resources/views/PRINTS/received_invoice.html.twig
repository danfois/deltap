<html>
<head>
    <title>Fattura</title>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <style>

        body {
            font-family: 'Raleway', sans-serif;
            font-size: 14px;
            font-weight: 400;
            /*line-height: 30px;*/
            color: #333;
        }

        table {
            font-size: 14px;
            border-collapse: collapse;
            border-spacing: 0;
        }

        td, th {
            padding: 5px 10px;
        }

        .center {
            text-align: center;
        }

        .left {
            text-align: left;
        }

        .right {
            text-align: right;
        }

        .intestation {
            width: 100%;
            text-align: right;
            border-bottom: 1px #ddd solid;
            padding: 5px 0;
            line-height: 16px;
            margin-bottom: 35px;
        }

        .invoice_to {
            width: 200px;
            float: left;
            margin-top: 25px;
        }

        .invoice_to table {
            font-size: 14px;
            color: #000;
        }

        .invoice_to table tr:first-child td {
            border-bottom: 1px #ddd solid;
        }

        .payment_terms {
            width: 350px;
            float: left;
            margin-top: 25px;
        }

        .payment_terms tr:first-child td {
            border-bottom: 1px #ddd solid;
        }

        .invoice_dt {
            float: right;
            text-align: right;
            width: 300px;
        }

        .invoice_dt table {
            float: right;
            clear: both;
        }

        .invoice_dt table td, .invoice_dt table th {
            text-align: right;
        }

        .invoice_dt table th {
            border-bottom: 1px #ddd solid;
            font-weight: 400;
        }

        .invoice_dt table td {
            font-weight: 700;
            font-size: 16px;
        }

        .invoice_body {
            width: 100%;
        }

        .invoice_body td, .invoice_body th {
            height: 60px;
            border-bottom: 1px #ddd solid;
        }

        .invoice_body th {
            background-color: #FFCB05;
        }

        .total {
            float: right;
            width: 250px;
        }

        .total td {
            border-bottom: 1px #ddd solid;
            height: 35px;
        }

        .totalAmount {
            background-color: #ffeeb5;
            background-color: #FFCB05;
            font-weight: 800;
        }

        .signature {
            float:right;
            width:200px;
            padding-top: 70px;
            text-align:center;
            padding-right:30px;
        }

        h2 {
            color: #FFCB05;
            font-size:16px;
            font-weight:700;
        }

    </style>
</head>
<body>

<div class="intestation">
    <strong>Redentours, Via A. Gramsci 84, 08100, Nuoro - P.Iva 00163100910</strong><br>
    <strong>Tel: </strong>0784 30325 &nbsp;| &nbsp;<strong>Email: </strong>info@redentours.com &nbsp;| &nbsp;<strong>Sito: </strong>www.redentours.com
</div>

<div class="invoice_to">
    <table>
        <tr>
            <td>Fattura ricevuta da</td>
        </tr>
        <tr>
            <td>
                <strong>{{ i.provider.businessName }}</strong><br>
                {{ i.provider.fullAddress.address }}<br>
                {{ i.provider.fullAddress.city }} ({{ i.provider.fullAddress.region }})
                - {{ i.provider.fullAddress.cap }}<br>
                P. Iva: {{ i.provider.vat }}
            </td>
        </tr>
    </table>
</div>

<div class="invoice_dt">
    <table>
        <tr>
            <th>Importo</th>
        </tr>
        <tr>
            <td>EUR {{ i.amount }}</td>
        </tr>
    </table>

    <table>
        <tr>
            <th>Data Fattura</th>
        </tr>
        <tr>
            <td>{{ i.invoiceDate|date('d-m-Y') }}</td>
        </tr>
    </table>

    <table>
        <tr>
            <th>Numero Fattura</th>
        </tr>
        <tr>
            <td>{{ i.invoiceNumber }}</td>
        </tr>
    </table>
</div>

<div style="clear:both; padding-top:50px;">
    <table class="invoice_body">
        <tr>
            <th class="left">Cod.</th>
            <th class="left">Descrizione</th>
            <th>Iva %</th>
            <th class="right">Imponibile</th>
        </tr>

        {% for d in i.invoiceDetails %}

            <tr>
                <td>{{ d.productCode }}</td>
                <td><strong>{{ d.productName }}</strong></td>
                <td class="center">{{ d.vat }} %</td>
                <td class="right">&euro; {{ d.totTaxExc }}</td>
            </tr>

        {% endfor %}

    </table>
    <table class="total">
        <tr>
            <td class="center">IMPONIBILE:</td>
            <td class="right">&euro; {{ i.TaxExcAmount }}</td>
        </tr>
        <tr>
            <td class="center">TOTALE IVA:</td>
            <td class="right">&euro; {{ i.totalVat }}</td>
        </tr>
        <tr class="totalAmount">
            <td class="center">TOTALE:</td>
            <td class="right">&euro; {{ i.amount }}</td>
        </tr>
    </table>
</div>


</body>
</html>