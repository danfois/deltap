{% extends('base.html.twig') %}
{% block title %}Redentours | {{ title }}{% endblock %}
{% block subheader_title %}{{ title }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">

            <!--begin::Portlet-->
            <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
						<span class="m-portlet__head-icon m--hide">
						<i class="la la-gear"></i>
						</span>
                            <h3 class="m-portlet__head-text">
                                {{ title }}
                            </h3>
                        </div>
                    </div>
                </div>
                <!--begin::Form-->
                <form id="form_turns" method="POST" class="m-form m-form--fit m-form--label-align-right"
                      action="{{ action_url }}" autocomplete="off">
                    {{ form_widget(form._token) }}
                    <div class="m-portlet__body">


                        <div class="m-form__section">

                            <div class="form-group m-form__group row">

                                <div class="col-lg-12 m-form__group-sub">
                                    <label>* Ora Inizio: </label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.startTime) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-clock-o"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Ora nella quale si è iniziato a lavorare oggi.</span>
                                </div>

                                <div class="col-lg-12 m-form__group-sub">
                                    <label>* Ora Fine: </label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.endTime) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-clock-o"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Ora nella quale si è finito di lavorare oggi.</span>
                                </div>

                                <div class="col-lg-12 m-form__group-sub">
                                    <label>* Ore Lavorate: </label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.workingHours) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-clock-o"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Ore effettive di lavoro</span>
                                </div>

                            </div>

                        </div>

                    </div>

            <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                <div class="m-form__actions m-form__actions--solid">
                    <div class="row">
                        <div class="col-lg-6">
                            <button type="submit" class="btn btn-primary">Salva</button>
                            <button type="reset" class="btn btn-secondary">Annulla</button>
                        </div>
                    </div>
                </div>
            </div>
            </form>
            <!--end::Form-->
        </div>
        <!--end::Portlet-->
    </div>
    </div>

{% endblock %}


{% block modals %}
{% endblock %}


{% block page_scripts %}
    <script src="{{ asset('assets/customjs/genericFormSubmission.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/customjs/validate_translations.js') }}" type="text/javascript"></script>

    <script>
        $(document).ready(function() {
            initializeWidgets();
            GenericFormSubmission($('#form_turns')).init();
        })
    </script>
{% endblock %}