<form id="form_expiration{% if edit is defined %}_edit{% endif %}" method="POST" class="m-form m-form--fit m-form--label-align-right"
      action="{{ action_url }}"
      autocomplete="off">
    <div class="m-portlet__body m--margin-15">

        <div class="form-group m-form__group row">

            {{ form_widget(form._token) }}

            <div class="col-lg-8 m-form__group-sub">
                <label>Titolo:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.title) }}
                </div>
                <span class="m-form__help">Titolo della scadenza</span>
            </div>

            <div class="col-lg-4 m-form__group-sub">
                <label>Scadenza:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.expirationDate) }}
                    <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                    class="la la-calendar"></i></span></span>
                </div>
                <span class="m-form__help">Data della scadenza</span>
            </div>
        </div>

        <div class="form-group m-form__group row">

            <div class="col-lg-12 m-form__group-sub">
                <label>* Descrizione:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.description) }}
                </div>
                <span class="m-form__help">Descrizione della scadenza</span>
            </div>

        </div>

        <div class="form-group m-form__group row">

            <div class="col-lg-6 m-form__group-sub">
                <label>* Fattura Emessa:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.issuedInvoice) }}
                </div>
                <span class="m-form__help">Opzionale. Fattura emessa da associare a questa scadenza</span>
            </div>

            <div class="col-lg-6 m-form__group-sub">
                <label>* Fattura Ricevuta:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.receivedInvoice) }}
                </div>
                <span class="m-form__help">Opzionale. Fattura ricevuta da associare a questa scadenza</span>
            </div>

        </div>

    </div>


    <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
        <div class="m-form__actions m-form__actions--line">
            <div class="row">
                <div class="col-lg-6">
                    <button type="submit" data-wizard-action="submit" class="btn btn-primary">Salva
                    </button>
                    <button type="reset" class="btn btn-secondary">Annulla</button>
                </div>
            </div>
        </div>
    </div>

</form>

<script>
    $(document).ready(function() {
        $('#expiration_issuedInvoice, #expiration_receivedInvoice').select2({
            placeholder: "Seleziona fattura",
            width: '100%'
        });
    });
</script>