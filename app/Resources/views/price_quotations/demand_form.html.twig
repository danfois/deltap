<form id="form_demand{% if edit is defined %}_edit{% endif %}" method="POST" class="m-form m-form--fit m-form--label-align-right"
      action="{{ action_url }}"
      autocomplete="off">
    <div class="m-portlet__body m--margin-15">

        <div class="form-group m-form__group row">

            {{ form_widget(form._token) }}

            <div class="col-lg-4 m-form__group-sub">
                <label>Preventivo:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.priceQuotation) }}
                </div>
                <span class="m-form__help">Facoltativo. Scegliere il preventivo oggetto della richiesta</span>
            </div>

            <div class="col-lg-4 m-form__group-sub">
                <label>* Richiesta da:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.requestedBy) }}
                    <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                    class="la la-user"></i></span></span>
                </div>
                <span class="m-form__help">Chi ha effettuato la richiesta</span>
            </div>

            <div class="col-lg-4 m-form__group-sub">
                <label>Modalità:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.comunication) }}
                </div>
                <span class="m-form__help">Modalità con cui è stata eseguita la richiesta</span>
            </div>

        </div>

        <div class="form-group m-form__group row">

            <div class="col-lg-4 m-form__group-sub">
                <label>* Ricevuta da:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.receiver) }}
                </div>
                <span class="m-form__help">Chi ha ricevuto la richiesta</span>
            </div>

            <div class="col-lg-4 m-form__group-sub">
                <label>* Tipo Richiesta:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.demandType) }}
                </div>
                <span class="m-form__help">Tipologia di richiesta</span>
            </div>

            <div class="col-lg-4 m-form__group-sub">
                <label>* Data e Ora:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.demandDateTime) }}
                    <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                    class="la la-calendar"></i></span></span>
                </div>
                <span class="m-form__help">Inserire data e ora della richiesta</span>
            </div>

        </div>

        <div class="form-group m-form__group row">

            <div class="col-lg-12 m-form__group-sub">
                <label>* Oggetto:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.subject) }}
                </div>
            </div>

        </div>

    </div>


    <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
        <div class="m-form__actions m-form__actions--line">
            <div class="row">
                <div class="col-lg-6">
                    <button type="submit" data-wizard-action="submit" class="btn btn-primary">Salva
                    </button>
                    <button type="reset" class="btn btn-secondary">Annulla</button>
                </div>
            </div>
        </div>
    </div>

</form>