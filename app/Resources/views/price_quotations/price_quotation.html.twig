{% extends 'base.html.twig' %}
{% block title %}Redentours | Crea Preventivo{% endblock %}
{% block subheader_title %}Crea Preventivo{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">

            <!--begin::Portlet-->
            <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
						<span class="m-portlet__head-icon m--hide">
						<i class="la la-gear"></i>
						</span>
                            <h3 class="m-portlet__head-text">
                                Preventivo
                            </h3>
                        </div>
                    </div>
                </div>
                <!--begin::Form-->
                <form id="form_customer" method="POST" class="m-form m-form--fit m-form--label-align-right"
                      action="">
                    {{ form_widget(form._token) }}
                    <div class="m-portlet__body">
                        <div class="m-form__section m-form__section--first">
                            <div class="m-form__heading">
                                <h3 class="m-form__heading-title">1. Dettagli Preventivo</h3>
                            </div>
                            <div class="form-group m-form__group row">
                                <div class="col-lg-3 m-form__group-sub">
                                    <label>* Numero Preventivo:</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.quotation_code) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-user"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Codice del preventivo. Generato automaticamente ma modificabile.</span>
                                </div>
                                <div class="col-lg-3 m-form__group-sub">
                                    <label>* Data Preventivo:</label>
                                    {{ form_widget(form.quotation_date) }}
                                    <span class="m-form__help">La data che comparir√† sul preventivo</span>
                                </div>
                                <div class="col-lg-4 m-form__group-sub">
                                    <label>* Tipo Servizio:</label>
                                    {{ form_widget(form.service_code) }}
                                    <span class="m-form__help"></span>
                                </div>
                                <div class="col-lg-2 m-form__group-sub">
                                    <label>&nbsp;</label><br>
                                    <div class="btn-md btn btn-warning m-btn m-btn--icon m-btn--gradient-to-metal"
                                         data-toggle="modal" data-target="#create_category">
                                <span>
                                    <i class="la la-plus"></i>
                                    <span>Nuovo Servizio</span>
                                </span>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                        <div class="m-form__actions m-form__actions--solid">
                            <div class="row">
                                <div class="col-lg-6">
                                    <button type="submit" class="btn btn-primary">Salva</button>
                                    <button type="reset" class="btn btn-secondary">Annulla</button>
                                </div>
                                <div class="col-lg-6 m--align-right">
                                    <button type="reset" class="btn btn-danger">Elimina</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
            <!--end::Portlet-->
        </div>
    </div>

{% endblock %}





{% block page_scripts %}
    <script src="{{ asset('assets/customjs/create_customer.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/customjs/validate_translations.js') }}" type="text/javascript"></script>
{% endblock %}