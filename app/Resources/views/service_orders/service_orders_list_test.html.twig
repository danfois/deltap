{% extends('base.html.twig') %}
{% block title %}Redentours | Ordini di Servizio{% endblock %}
{% block subheader_title %}Ordini di Servizio{% endblock %}

{% block content %}
    <div class="m-alert m-alert--icon m-alert--air m-alert--square alert alert-dismissible m--margin-bottom-30"
         role="alert">
        <div class="m-alert__icon">
            <i class="flaticon-exclamation m--font-info"></i>
        </div>
        <div class="m-alert__text">
            Lista degli Ordini di Servizio caricata dal database
        </div>
    </div>
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Ordini di Servizio
                        <small>
                            versione interattiva
                        </small>
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="form-group m-form__group row align-items-center">
                            <table border="0" cellspacing="5" cellpadding="5">
                                <tbody>
                                <tr>
                                    <td>Data Inizio:</td>
                                    <td><input class="form-control m-input" name="min" id="min" type="text" value="{{ "now"|date("d-m-Y") }}"></td>
                                    <td>Data Fine:</td>
                                    <td><input class="form-control m-input" name="max" id="max" type="text"></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-xl-4 m--align-right order-1 order-xl-2">
                        <a href="{{ path('create_service_order') }}" class="btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air" target="_blank">
												<span>
													<i class="la la-file"></i>
													<span>
														Nuovo Ordine di Servizio
													</span>
												</span>
                        </a>
                        <div class="m-separator m-separator--dashed d-xl-none"></div>
                    </div>
                </div>
            </div>
            <!--end: Search Form -->
            <!--begin: Search Form -->
            <div class="m-form m-form--label-align-right m--margin-top-10 m--margin-bottom-30">
                <div class="row">
                    <div class="col-lg-2">

                        <select class="form-control m-input" id="mass-action">
                            <option value="">Scegli Operazione...</option>
                            <option value="1">Registra Pagamento</option>
                            <option value="3">Registra Fattura</option>
                            <option value="4">Elimina</option>
                        </select>
                    </div>
                    <div class="col-lg-1">
                        <a href="javascript:void(0);" class="btn btn-brand" id="apply-mass-action">Applica</a>
                    </div>
                    <div class="col-lg-9">
                        <button class="btn btn-secondary" type="button" id="m_datatable_check_all">
                            Seleziona Tutto
                        </button>
                        <button class="btn btn-secondary" type="button" id="m_datatable_uncheck_all">
                            Deseleziona Tutto
                        </button>
                        <button class="btn btn-secondary" type="button" id="m_datatable_remove_row">
                            Nascondi Selezionati
                        </button>
                    </div>
                </div>
            </div>
            <!--end: Search Form -->
            <!--begin: Datatable -->
            <div class="m_datatable" id="api_methods"></div>



            <table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_1">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Itin.</th>
                    <th>Data Part.</th>
                    <th>Data Arr.</th>
                    <th>Orari</th>
                    <th>Pass.</th>
                    <th>Veicolo</th>
                    <th>Autista</th>
                    <th>Cliente</th>
                    <th>Partenza</th>
                    <th>Arrivo</th>
                    <th>Freq.</th>
                    <th>Servizio</th>
                    <th>Stato</th>
                    <th style="min-width:120px;">Azioni</th>
                </tr>
                </thead>
            </table>
            <!--end: Datatable -->
        </div>
    </div>
{% endblock %}


