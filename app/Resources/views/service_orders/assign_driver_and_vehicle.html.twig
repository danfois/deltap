<form id="form_assign_driver_vehicle" method="POST" class="m-form m-form--fit m-form--label-align-right"
      action="{{ action_url }}"
      autocomplete="off">
    <div class="m-portlet__body m--margin-15">

        <div class="form-group m-form__group row">

            {{ form_widget(form._token) }}

            <div class="col-lg-6 m-form__group-sub">
                <label>* Autista:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.driver) }}
                    <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                    class="la la-user"></i></span></span>
                </div>
                <span class="m-form__help">Scegliere l'autista che dovr√† eseguire questo Ordine di Servizio</span>
            </div>

            <div class="col-lg-6 m-form__group-sub">
                <label>* Veicolo:</label>
                <div class="m-input-icon m-input-icon--right">
                    {{ form_widget(form.vehicle) }}
                    <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                    class="la la-bus"></i></span></span>
                </div>
                <span class="m-form__help">Scegliere il veicolo per questo Ordine di Servizio</span>
            </div>

        </div>
    </div>
    <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
        <div class="m-form__actions m-form__actions--line">
            <div class="row">
                <div class="col-lg-6">
                    <button type="submit" data-wizard-action="submit" class="btn btn-primary">Salva
                    </button>
                    <button type="reset" class="btn btn-secondary">Annulla</button>
                </div>
            </div>
        </div>
    </div>

</form>