{% extends('base.html.twig') %}
{% block title %}Redentours | {{ title }}{% endblock %}
{% block subheader_title %}{{ title }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">

            <!--begin::Portlet-->
            <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
						<span class="m-portlet__head-icon m--hide">
						<i class="la la-gear"></i>
						</span>
                            <h3 class="m-portlet__head-text">
                                {{ title }}
                            </h3>
                        </div>
                    </div>
                </div>
                <!--begin::Form-->
                <form id="form_service_order" method="POST" class="m-form m-form--fit m-form--label-align-right"
                      action="{{ action_url }}" autocomplete="off">
                    {{ form_widget(form._token) }}
                    <div class="m-portlet__body">

                        <div class="m-form__section m-form__section--first">

                            <div class="m-form__heading">
                                <h3 class="m-form__heading-title">1. Impostazioni Ordine di Servizio</h3>
                            </div>


                            <div class="form-group m-form__group row">

                                <div class="col-lg-6 m-form__group-sub">
                                    <label>* Preventivo:</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.priceQuotation) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-file"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Preventivo associato a questo Ordine di Servizio. E' Obbligatorio.</span>
                                </div>

                                <div class="col-lg-6 m-form__group-sub">
                                    <label>* Itinerario:</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.priceQuotationDetail) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-map-marker"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Itinerario associato a questo Ordine di Servizio. E' Obbligatorio.</span>
                                </div>

                            </div>

                            <div class="form-group m-form__group row">

                                <div class="col-lg-6 m-form__group-sub">
                                    <label>* Tragitto:</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.stage) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-map-marker"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Tragitto associato a questo Ordine di Servizio. E' Obbligatorio.</span>
                                </div>

                                <div class="col-lg-6 m-form__group-sub">
                                    <label>* Cliente:</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.customer) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-user"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Cliente per il quale verrà eseguito l'Ordine di Servizio</span>
                                </div>

                            </div>

                            <div class="form-group m-form__group row">

                                <div class="col-lg-6 m-form__group-sub">
                                    <label>* Frequenza Servizio:</label>
                                    {{ form_widget(form.serviceFrequency) }}
                                    <span class="m-form__help"></span>
                                </div>


                                <div class="col-lg-6 m-form__group-sub">
                                    <label>* Tipo Servizio:</label>
                                    {{ form_widget(form.service) }}
                                    <span class="m-form__help">Inserire la tipologia di servizio da eseguire.</span>
                                </div>


                            </div>

                        </div>


                        <div class="m-form__seperator m-form__seperator--dashed"></div>


                        <div class="m-form__section">
                            <div class="m-form__heading">
                                <h3 class="m-form__heading-title">2. Esecuzione Ordine di Servizio</h3>
                            </div>

                            <div class="form-group m-form__group row">

                                <div class="col-lg-6 m-form__group-sub">
                                    <label>* Autista:</label>
                                    {{ form_widget(form.driver) }}
                                    <span class="m-form__help"></span>
                                </div>

                                <div class="col-lg-6 m-form__group-sub">
                                    <label>* Veicolo:</label>
                                    {{ form_widget(form.vehicle) }}
                                    <span class="m-form__help"></span>
                                </div>

                            </div>

                        </div>


                        <div class="m-form__seperator m-form__seperator--dashed"></div>
                        <div class="m-form__section">
                            <div class="m-form__heading">
                                <h3 class="m-form__heading-title">3. Dettagli Ordine di Servizio</h3>
                            </div>

                            <div class="form-group m-form__group row">

                                <div class="col-lg-3 m-form__group-sub">
                                    <label>* Data Partenza:</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.departureDate) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-calendar"></i></span></span>
                                    </div>
                                    <span class="m-form__help"></span>
                                </div>

                                <div class="col-lg-3 m-form__group-sub">
                                    <label>* Data Arrivo:</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.arrivalDate) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-calendar"></i></span></span>
                                    </div>
                                    <span class="m-form__help"></span>
                                </div>

                                <div class="col-lg-3 m-form__group-sub">
                                    <label>* Ora Partenza:</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.startTime) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-clock-o"></i></span></span>
                                    </div>
                                    <span class="m-form__help"></span>
                                </div>

                                <div class="col-lg-3 m-form__group-sub">
                                    <label>* Ora Rientro:</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.endTime) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-clock-o"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Inserire l'ora di rientro o di arrivo per questo Ordine di Servizio</span>
                                </div>

                            </div>


                            <div class="form-group m-form__group row">

                                <div class="col-lg-3 m-form__group-sub">
                                    <label>* Passeggeri</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.passengers) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right right-30"><span><i
                                                        class="la la-users"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Inserire il numero di passeggeri</span>
                                </div>

                                <div class="col-lg-3 m-form__group-sub">
                                    <label>* Località Partenza</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.departureLocation) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-map-marker"></i></span></span>
                                    </div>
                                    <span class="m-form__help"></span>
                                </div>

                                <div class="col-lg-3 m-form__group-sub">
                                    <label>* Località Arrivo</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.arrivalLocation) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-map-marker"></i></span></span>
                                    </div>
                                    <span class="m-form__help"></span>
                                </div>

                                <div class="col-lg-3 m-form__group-sub">
                                    <label>* Prezzo</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.price) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right right-30"><span><i
                                                        class="la la-money"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Inserire il prezzo/valore economico di questo Ordine di Servizio</span>
                                </div>

                            </div>


                            <div class="form-group m-form__group row">

                                <div class="col-lg-12 m-form__group-sub">
                                    <label>* Descrizione</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.description) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-edit"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Inserire la descrizione dell'Ordine di Servizio per l'autista</span>
                                </div>

                            </div>


                            <div class="form-group m-form__group row">

                                <div class="col-lg-12 m-form__group-sub">
                                    <label>* Disposizioni</label>
                                    <div class="m-input-icon m-input-icon--right">
                                        {{ form_widget(form.dispositions) }}
                                        <span class="m-input-icon__icon m-input-icon__icon--right"><span><i
                                                        class="la la-edit"></i></span></span>
                                    </div>
                                    <span class="m-form__help">Inserire le disposizioni per l'autista per questo Ordine di Servizio</span>
                                </div>

                            </div>


                        </div>


                        <div class="m-form__seperator m-form__seperator--dashed"></div>


                    </div>
                    <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                        <div class="m-form__actions m-form__actions--solid">
                            <div class="row">
                                <div class="col-lg-6">
                                    <button type="submit" class="btn btn-primary">Salva</button>
                                    <button type="reset" class="btn btn-secondary">Annulla</button>
                                </div>
                                <div class="col-lg-6 m--align-right">
                                    <button type="reset" class="btn btn-danger">Elimina</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!--end::Form-->
            </div>
            <!--end::Portlet-->
        </div>
    </div>

{% endblock %}


{% block modals %}
{% endblock %}


{% block page_scripts %}
    <script src="{{ asset('assets/customjs/summernote.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/customjs/initializeWidgets.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/customjs/service_orders/service_order.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/customjs/validate_translations.js') }}" type="text/javascript"></script>
{% endblock %}